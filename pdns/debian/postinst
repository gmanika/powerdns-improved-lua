#!/bin/sh

set -e

update_docbase() {
	if command -v install-docs >/dev/null 2>&1 ; then
		install-docs -i /usr/share/doc-base/pdns
	fi
}


update_init() {
	if [ -z "$2" ] ; then
		update-rc.d pdns defaults 15 85 > /dev/null
	fi
}


if [ "$1" = "configure" -o "$1" = "abort-upgrade" ] ; then
	update_docbase
	update_init "$@"
	ldconfig
fi
